{
    "variables": {
        "disk_size": "61440",
        "password": "vagrant"
    },

    "builders": [
        {
            "name": "windows-8.1-enterprise-vagrant",

            "type": "qemu",
            "format":"qcow2",
            "accelerator": "kvm",

            "disk_size": "{{ user `disk_size`}}",
            "disk_interface":"virtio",
            "iso_url": "http://download.microsoft.com/download/B/9/9/B999286E-0A47-406D-8B3D-5B5AD7373A4A/9600.16384.WINBLUE_RTM.130821-1623_X64FRE_ENTERPRISE_EVAL_EN-US-IRM_CENA_X64FREE_EN-US_DV5.ISO",
            "iso_checksum_type": "sha1",
            "iso_checksum": "73321fa912305e5a16096ef62380a91ee1f112da",

            "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
            "boot_wait": "2s",

            "floppy_files": [
                "floppy/drivers/virtio-win-0.1.102/viostor/w8.1/amd64/*",
                "floppy/drivers/virtio-win-0.1.102/NetKVM/w8.1/amd64/*",
                "floppy/common/*",
                "floppy/windows-8.1-enterprise//*"
            ],

            "communicator": "winrm",

            "winrm_username": "vagrant",
            "winrm_password": "vagrant",
            "winrm_timeout": "10000s",

            "qemuargs": [
                [ "-m", "2048M" ]
            ]
        }
    ],

    "provisioners": [
        {
            "type": "windows-shell",
            "scripts": [
                "scripts/unlimited-password-expiration.bat",
                "scripts/enable-rdp.bat",
                "scripts/uac-disable.bat",
                "scripts/disablewinupdate.bat",
                "scripts/disable-hibernate.bat",
                "scripts/firewall-open-ping.bat",
                "scripts/firewall-open-rdp.bat"
            ]
        }
    ],

    "post-processors": [
        {
            "keep_input_artifact": false,
            "output": "box/windows-8.1-enterprise.box",
            "type": "vagrant",
            "vagrantfile_template": "vagrantfile-windows-8.1-enterprise.template"
        }
    ]
}
